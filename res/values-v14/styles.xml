<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.NoTitle.Dark" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowBackground">@drawable/screen_background_gray</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_holo_dark</item>
        <item name="popupMenuStyle">@style/Widget.PopupMenu.Dark</item>
        <item name="dropDownListViewStyle">@style/Widget.Note.ListView.DropDown.Dark</item>
    </style>
    <style name="Theme.NoTitle.Light" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowBackground">@drawable/screen_background_gray</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_holo_light</item>
        <item name="popupMenuStyle">@style/Widget.PopupMenu.Light</item>
        <item name="dropDownListViewStyle">@style/Widget.Note.ListView.DropDown.Light</item>
    </style>
    <style name="Theme.Normal" parent="@android:style/Theme.DeviceDefault" />
    <style name="Theme.Trans.NoTitle.Dark" parent="@android:style/Theme.DeviceDefault.Panel">
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="Theme.Trans.NoTitle.Light" parent="@android:style/Theme.DeviceDefault.Panel">
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="Theme.Holo.NoTitle.Dark" parent="@style/Theme.Holo.NoTitle.DarkBase" />
    <style name="Theme.Holo.NoTitle.Light" parent="@style/Theme.Holo.NoTitle.LightBase" />
    <style name="Theme.Holo.Trans.NoTitle.Dark" parent="@android:style/Theme.Holo.Panel">
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="Theme.Holo.Trans.NoTitle.Light" parent="@android:style/Theme.Holo.Light.Panel">
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="Theme.Holo.NoTitle.DarkBase" parent="@android:style/Theme.Holo.NoActionBar">
        <item name="android:windowBackground">@drawable/screen_background_gray</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_holo_dark</item>
        <item name="popupMenuStyle">@style/Widget.PopupMenu.Dark</item>
        <item name="dropDownListViewStyle">@style/Widget.Note.ListView.DropDown.Dark</item>
    </style>
    <style name="Theme.Holo.NoTitle.LightBase" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/screen_background_gray</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_holo_light</item>
        <item name="popupMenuStyle">@style/Widget.PopupMenu.Light</item>
        <item name="dropDownListViewStyle">@style/Widget.Note.ListView.DropDown.Light</item>
    </style>
</resources>
